<h1>Listing all questions</h1>

<p>

<%= link_to "Create new question", new_question_path %>

</p>

<table>

<tr>

<th>Question</th>

</tr>

<% @questions.each do |question| %>

<tr>

<td><%= question.problem %></td>
<td>Created by:<%= question.user.username if question.user %></td>
<td><%= time_ago_in_words(question.created_at) %> ago</td>
<td><%= link_to 'Show', question_path(question) %></td>

</tr>

<% end %>

</table>