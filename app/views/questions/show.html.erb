
<h2 align="center">Question: <%= @question.problem %></h2>
<% if @question.user == current_user%>
  <div class="row">
  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description">Answer: <%= @question.answer %></h4>
  </div>
  <div class="col-xs-4 col-xs-offset-4">
  <%= link_to "Delete question", question_path(@question), method: :delete, data: {confirm: "Are you sure?"} %>
  </div>
  <div class="col-xs-4 col-xs-offset-4">
    <%= link_to "Back to questions list", questions_path %>
  </div>
  </dir>
<% else %>
  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for @response, url: answer_path do |f| %>
        <%= f.hidden_field :problem, value: @question.problem %>
        <div class="form-group">
          <div class="control-label col-sm-2">
          <%= f.label :answer %>
          </div>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :answer, class: "form-control", placeholder: "Answer of question", autofocus: true %>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit("Submit", class: 'btn btn-primary btn-lg') %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  <div align="center">
    <%= link_to "Back to questions list", questions_path %>
  </div>
<% end %>


