<!DOCTYPE html>
<html>
<head>
  <title>TriviaGame</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul>
  <li><%= link_to "TriviaGame", root_path%></li>
  <li><%= link_to "Questions", questions_path %></li>
  <li><%= link_to "Scores", users_path %></li>
  <% if logged_in? %>
  <li><%= link_to "New Question", new_question_path %></li>
  <li><%= link_to 'Log out', logout_path, method: :delete %><li>
  <li><%= link_to "View your profile", user_path(current_user) %></li>
  <% else %>
  <li><%= link_to 'Log in', login_path %></li>
  <li><%= link_to 'Sign up', signup_path %></li>
  <% end %>
  </ul>
<%= render 'layouts/messages' %>
<%= yield %>
<%= debug(params) if Rails.env.development? %>
</body>
</html>
