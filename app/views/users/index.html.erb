<table class="table table-hover score-board">
  <tr>
	  <th>Rank</th>
    <th>User</th>
    <th>Score</th>
  </tr>
  <% @users.each do |user| %>
    <% if user.score != nil%>
      <% if user.id == current_user.id %>
        <tr class="info">
      <% else %>
        <tr>
      <% end %>
      	  <td></td>
          <td><%= user.username %></td>
          <td><%= user.score %></td>
        </tr>
      <% end %>
    <% end %>
</table>
<p class="text-info">
	<small>*<em>your score are highlighted in blue.</em></small>
</p>